<h1>Books</h1>
<% @books.each do |book| %>
  <%= book.title %>
  <%= book.body %>
  <%= link_to "show", book_path(book.id) %>
  <%= link_to "Edit", edit_book_path(book.id) %>
  <%= link_to "Destroy", book_path(book.id), method: :delete %>
<% end %>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prihibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>

  <h4>Body</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>

<% end %>

